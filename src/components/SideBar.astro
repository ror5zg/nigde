---
import { late } from 'astro:schema';
import MenuList from '../components/MenuList.astro';
import LogoLink from '../components/LogoLink.astro';
---

<div class="sidebar">
    <div class="sidebar-container">
        <LogoLink />
        <MenuList />
    </div>
</div>

<style>
    .sidebar {
        background-color: #e3e4e2;

        justify-content: center;
        align-items: center;

        border-right: 1px solid #1d1d1d;
    }

    .sidebar-container {
        display: flex;
        flex-direction: column;
        align-items: left;
        gap: 20px;
    }
</style>
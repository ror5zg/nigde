---
import { late } from 'astro:schema';
// import Logo from '../assets/nikto_with_sub.svg';
import Logo from '../assets/nikto_nosub.svg';

const menuItems = [
    {
        id: "about",
        nameEn: "about",
        link: "about"
    },
    {
        id: "works",
        nameEn: "works",
        link: "gallery"
    },
    {
        id: "contact",
        nameEn: "contact",
        link: "#"
    },
];
---

<div class="sidebar">
    <div class="sidebar-container">
        <div class="logo">
            <a href="/">
                <Logo width={200} />
            </a>
        </div>
        
        <div class="menu">
            <ul class="menu-list">
                {
                    menuItems.map((item) => (
                        <li class="menu-item">
                            <a href={item.link} class="menu-link">{item.nameEn}</a>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</div>

<style>
    .sidebar {
        background-color: #e3e4e2;
        width: 25%;

        display: flex;
        justify-content: center;
        align-items: center;

        border-right: 1px solid #1d1d1d;
    }

    .sidebar-container {
        display: flex;
        flex-direction: column;
        align-items: left;
        gap: 20px;
    }

    .menu-list {
        list-style: none;
        font-style: italic;
        font-size: 1.4em;
        letter-spacing: 0.05em;
    }

    .menu-item {
        width: 100%;
    }

    .menu-link {
        display: block;
        text-decoration: none;
        white-space: nowrap;
    }

    a:link,a:active,a:visited {
        color: #000000;
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }
</style>